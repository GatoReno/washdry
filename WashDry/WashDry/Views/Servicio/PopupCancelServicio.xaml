<popup:PopupPage  xmlns:popup="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="WashDry.Views.Servicio.PopupCancelServicio">
    <StackLayout
        BackgroundColor="DarkSalmon"
        
        Margin="30,130,30,60"
        Padding="30">
        <ActivityIndicator
            x:Name="Cator"
            Color="IndianRed"
            IsRunning="False"
            />
        <Editor
            VerticalOptions="Center"
            Placeholder="Motivo de su cancelacion"
            x:Name="Message"
            HeightRequest="100"
            HorizontalOptions="Center"
            />
        <Label
            Text="Gracias por ayudarnos a mejorar tu servicio."
            FontSize="Micro"
            />
        <Button
            BackgroundColor="IndianRed"
            x:Name="btnCancel"
            Clicked="btnCancel_Clicked"
            Text="Cancelar"
             VerticalOptions="Center"
            />

    </StackLayout>
</popup:PopupPage>